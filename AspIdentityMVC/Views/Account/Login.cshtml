@{
    Layout = null;
}
@model AspIdentityMVC.Models.Account.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bootstrap 5 Login form Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="vh-100 d-flex justify-content-center align-items-center">
                <div class="container">
                    @{
                        if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                <div>
                                    <strong>Error!</strong> @TempData["LoginError"]
                                </div>
                            </div>
                        }
                    }
                    <div class="row d-flex justify-content-center">
                        <div class="col-12 col-md-8 col-lg-6">
                            <div class="border border-3 border-primary"></div>
                            <div class="card bg-white">
                                <div class="card-body p-5">
                                    <form class="mb-3 mt-md-4" asp-controller="Account" asp-action="Login">
                                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                                        <h2 class="fw-bold mb-2 text-uppercase ">Asp Identity MVC .net 6.0 </h2>
                                        <p class=" mb-5">Please enter your login and password!</p>
                                        <div class="mb-3">
                                            <label for="email" class="form-label ">Email address</label>
                                            <input type="email" class="form-control" id="Username" name="Username" placeholder="name@example.com">
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label ">Password</label>
                                            <input type="password" class="form-control" id="Password" name="Password" placeholder="*******">
                                        </div>
                                        <p class="small"><a class="text-primary" href="forget-password.html">Forgot password?</a></p>
                                        <div class="d-grid">
                                            <button class="btn btn-outline-dark" type="submit">Login</button>
                                        </div>
                                    </form>
                                    <div>
                                        <p class="mb-0  text-center">
                                            Don't have an account? <a href="signup.html"
                                                                      class="text-primary fw-bold">
                                                Sign
                                                Up
                                            </a>
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
